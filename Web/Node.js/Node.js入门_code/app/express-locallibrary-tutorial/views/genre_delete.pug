extends layout

block content
    h1= title
    
    p #[strong Title:]
        a(href=genre.url) #{genre.name}

    if books.length
        p #[strong Delete the following books before attempting to delete this genre.]
        
        dl
        each val in books
            dt
                a(href=val.url) #{val.title}
            dd #{val.summary}

    else
        p Do you really want to delete this genre

        form(method="POST" action="")
            .form-group
                input#id.form-control(type="hidden" name="id" value=genre._id required="true")
            button.btn.btn-primary(type="submit") Delete
