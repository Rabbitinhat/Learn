extends layout

block content
    h1= title

    form(method="POST" action="")
        .form-group
            label(for="book") Book:
            select#book.form-control(type="select" placeholder="Select book" required="true")
                for book in book_list
                    if bookinstance
                        option(value=book._id selected=(bookinstance.book.toString()===book._id.toString() ? "selected" : false)) #{book.title}
                    else
                        option(value=book._id) #{book.title}
        .form-group
            label(for="imprint") Imprint:
            input#imprint.form-control(type="text" placeholder="Publisher and date information" name="imprint" required="true" value=(undefined===bookinstance ? "" : bookinstance.imprint))
        .form-group
            label(for="due_back") Date when book available:
            input#due_back.form-control(type="date" namee="due_back" value=(undefined===bookinstance ? "" : bookinstance.due_back_formatted))

        .form-group
            label(for="status") Status:
            select#status.form-control(type="select" palceholder="Select status" name="status" required="true")
                option(value="馆藏维护") 馆藏维护
                option(value="可供借阅") 可供借阅
                option(value="已借出") 已借出
                option(value="保留") 保留

        button.btn.btn-primary(type="submit") Submit

        if errors
            ul
                for error in errors
                    li!=error.msg